@model IEnumerable<OstreCWEB.Data.Repository.Characters.CoreClasses.PlayableRace>

@{
    ViewData["Title"] = "PlayableCharacterRace";
}

<h1>PlayableCharacterRace</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlayableRaceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RaceName)
            </th>
           <th>
                @Html.DisplayNameFor(model => model.Strength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dexterity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Constitution)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Intelligence)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wisdom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Charisma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountOfSkillsToChoose)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PlayableRaceId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RaceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Strength)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dexterity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Constitution)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Intelligence)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Wisdom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Charisma)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmountOfSkillsToChoose)
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="card">
    <div>
        <p>.</p>

    </div>
</div>
<div class="card">
    <div>
       <a asp-action="Index" class="btn btn-primary">Back</a>
       <a asp-action="PlayableCharacterClass" class="btn btn-primary">Class</a>
    </div>
</div>

@model OstreCWEB.ViewModel.Characters.PlayableCharacterCreateView
@{
    ViewData["Title"] = "Summary";
}

<div class="accordion" id="accordionExample" hidden="true">
  <div class="accordion-item">
    <h2 class="accordion-header" id="headingOne">
      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
        Statistics
      </button>
    </h2>
    <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
      <div class="accordion-body">
        <div>
            <p>RaceId: @ViewBag.RaceId</p>
            <p>RaceName: @ViewBag.RaceName</p>
            <p>ClassId: @ViewBag.ClassId</p>
            <p>ClassName: @ViewBag.ClassName</p>
            <p>Str: @ViewBag.Str</p>
            <p>Dex: @ViewBag.Dex</p>
            <p>Con: @ViewBag.Con</p>
            <p>Int: @ViewBag.Int</p>
            <p>Wis: @ViewBag.Wis</p>
            <p>Cha: @ViewBag.Cha</p>            
            <p>Name: @ViewBag.Name</p>
        </div>
      </div>
    </div>
  </div>
</div><!--Statistics only for test-->

<div class="row">
    <div class="col-md-12">    
        <div class="col-md-4 ">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div hidden="true">
                    <input asp-for="RaceId"/>
                    <input asp-for="PlayableClassId"/>
                    <input asp-for="Strenght"/>
                    <input asp-for="Dexterity"/>
                    <input asp-for="Constitution"/>
                    <input asp-for="Intelligence"/>
                    <input asp-for="Wisdom"/>
                    <input asp-for="Charisma"/>
                    <input asp-for="CharacterName"/>
                </div><!--Attributes pass-->

                <div class="p-3 bg-opacity-75 border border-warning-subtle rounded-top" style="background: radial-gradient(circle at -4% -12.9%, rgb(90, 98, 110) 0.3%, rgb(33, 31, 33) 90.2%);
                    color:goldenrod; text-align:center">
                    <h2>Summary</h2>
                </div>
                <br />
                    <div class="form-group">
                        <input type="submit" value="Set Name" class="btn" asp-action="SetName" asp-controller="PlayableCharacter"
                        style="background: radial-gradient(circle at -4% -12.9%, rgb(90, 98, 110) 0.3%, rgb(33, 31, 33) 90.2%);color:goldenrod; text-align:center"/>  
                        <input type="submit" value="Create" class="btn" asp-action="Create" asp-controller="PlayableCharacter"
                        style="background: radial-gradient(circle at -4% -12.9%, rgb(90, 98, 110) 0.3%, rgb(33, 31, 33) 90.2%);color:goldenrod; text-align:center"/>                    
                    </div>                
            </form>
        </div>
        <div class="col-12 col-md-6 card ">Column 1</div>
        <div class="col-12 col-md-6 card ">Column 2</div>
@*        <div class="col-md-2">
            <div>
                stats
            </div>
        </div>*@
@*        <div class="col-md-2">
            <div>
                stats
            </div>
        </div>*@
    </div>
</div><!--Form Set Class-->

<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 card p-3 m-6">
        <div class="col-6">
            <span>Strength:</span><input type="text" asp-for="Strenght" readonly/>
        </div>
        <div class="col-6">
            <span>Dexterity:</span><input type="text" asp-for="Dexterity" readonly/>
        </div>
        <div class="col-6">
            <span>Constitution:</span><input type="text" asp-for="Constitution" readonly/>
        </div>
        <div class="col-6">
            <span>Intelligence:</span><input type="text" asp-for="Intelligence" readonly/>
        </div>
        <div class="col-6">
            <span>Wisdom:</span><input type="text" asp-for="Wisdom" readonly/>
        </div>
        <div class="col-6">
            <span>Charisma:</span><input type="text" asp-for="Charisma" readonly/>
        </div>
    </div>
    <div class="col-12 col-md-6 card p-3 m-6">Column 2</div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-5 my-3 card">Column 1</div>
    <div class="col-12 col-md-5 my-3 card">Column 2</div>
  </div>
</div>

@model IEnumerable<OstreCWEB.Data.Repository.Characters.CoreClasses.PlayableCharacterClass>

@{
    ViewData["Title"] = "PlayableCharacterClass";
}

<h1>PlayableCharacterClass</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Strength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dexterity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Constitution)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Intelligence)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wisdom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Charisma)
            </th>
@*            <th>
                @Html.DisplayNameFor(model => model.PlayableCharacterId)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Strength)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dexterity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Constitution)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Intelligence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wisdom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Charisma)
            </td>
@*            <td>
                @Html.DisplayFor(modelItem => item.PlayableCharacterId)
            </td>*@
        </tr>
}
    </tbody>
</table>
<div class="card">
    <div>
       <a asp-action="PlayableCharacterRace" class="btn btn-primary">Race</a>
       <a asp-action="PlayableCharacterAttr" class="btn btn-primary">Attributes</a>
    </div>
</div>
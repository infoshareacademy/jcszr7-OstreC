@model OstreCWEB.ViewModel.StoryBuilder.ParagraphElementView

@{
    ViewData["Title"] = "Delete Paragraph";
}


<div class="pagetitle">
    <h1>Delete Paragraph</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-area="" asp-controller="StoryBuilder" asp-action="Index">StoryBuilder</a></li>
            <li class="breadcrumb-item active">Delete Paragraph</li>
        </ol>
    </nav>
</div>


<div class="card">
    <div class="card-body">
        <h5 class="card-title">Are you sure you want to delete Paragraph with all elements?</h5>
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="Id"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.Id
            </dd>
            <dt class="col-sm-2">
                <label asp-for="ParagraphType"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.ParagraphType
            </dd>
            <dt class="col-sm-2">
                <label asp-for="StageDescription"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.StageDescription
            </dd>
            <dt class="col-sm-2">
                <label asp-for="AmountOfChoices"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.AmountOfChoices
            </dd>
        </dl>

        <form asp-action="DeleteParagraph">
            <input asp-for="StoryId" hidden="true" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-route-name="StoryBuilder" asp-action="ParagraphDetails" asp-route-id="@Model.StoryId" asp-route-paragraphId="@Model.Id" type="button" class="btn btn-success">Back to details!</a>
        </form>
    </div>
</div>
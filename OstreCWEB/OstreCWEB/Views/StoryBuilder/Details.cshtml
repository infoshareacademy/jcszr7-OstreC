@model OstreCWEB.ViewModel.StoryBuilder.StoryDetailsView

@{
    ViewData["Title"] = $"Story " + @Model.Name;
}

<div class="col-xxl-4 col-md-6">
    <div class="card info-card sales-card">
        <div class="filter">
            <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                <li><a asp-action="Edit" asp-route-id="@Model.Id">Edit</a></li>
                <li><a asp-action="Delete" asp-route-id="@Model.Id">Delete</a></li>
            </ul>
        </div>

        <div class="card-body">
            <h5 class="card-title">@Model.Name  </h5>
            Description:<br />
            @Model.Description<br />
            Amount of Paragraphs: @Model.AmountOfParagraphs
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@if(Model.PreviousParagraphs.Count() != 0){
<div class="card-body">
    <h2>Previous Paragraphs</h2>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <label asp-for="PreviousParagraphs.First().ParagraphType"></label>
                </th>
                <th>
                    <label asp-for="PreviousParagraphs.First().StageDescription"></label>
                </th>
                <th>
                    <label asp-for="PreviousParagraphs.First().AmountOfChoices"></label>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PreviousParagraphs)
            {
                <tr>
                    <td>
                        @item.ParagraphType
                    </td>
                    <td>
                        @item.StageDescription
                    </td>
                    <td>
                        @item.AmountOfChoices
                    </td>
                    <td>
                        @*                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                        <a asp-route-name="storyBuilder" asp-action="Details" asp-route-id="@Model.Id" asp-route-paragraphId="@item.Id">Go here!</a> |
                        @*                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
}

<div class="card-body">
    <h2>Current Paragraph</h2>

    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="@Model.CurrentParagraphView.ParagraphType"></label>      
        </dt>
        <dd class = "col-sm-10">
            @Model.CurrentParagraphView.ParagraphType
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="@Model.CurrentParagraphView.StageDescription"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.CurrentParagraphView.StageDescription
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.CurrentParagraphView.AmountOfChoices"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.CurrentParagraphView.AmountOfChoices
        </dd>
    </dl>

</div>

@if(Model.NextParagraphs.Count() != 0){
<div class="card-body">
    <h2>Next Paragraphs</h2>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <label asp-for="NextParagraphs.First().ParagraphType"></label>
                </th>
                <th>
                    <label asp-for="NextParagraphs.First().StageDescription"></label>
                </th>
                <th>
                    <label asp-for="NextParagraphs.First().AmountOfChoices"></label>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.NextParagraphs)
            {
                <tr>
                    <td>
                        @item.ParagraphType
                    </td>
                    <td>
                        @item.StageDescription
                    </td>
                    <td>
                        @item.AmountOfChoices
                    </td>
                    <td>
                        @*                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                        <a asp-route-name="storyBuilder" asp-action="Details" asp-route-id="@Model.Id" asp-route-paragraphId="@item.Id">Go here!</a> |
                        @*                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                    </td>
                </tr>
            }
            <tr>
                <td>
                    null
                </td>
                <td>
                    null
                </td>
                <td>
                    null
                </td>
                <td>
                    <a asp-action="#" asp-route-id="#">Creat</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
}
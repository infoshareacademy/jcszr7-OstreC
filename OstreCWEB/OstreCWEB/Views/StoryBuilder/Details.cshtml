@model OstreCWEB.ViewModel.StoryBuilder.StoryDetailsView

@{
    ViewData["Title"] = $"Story " + @Model.Name;
}

<div class="pagetitle">
    <h1>@Model.Name</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-area="" asp-controller="StoryBuilder" asp-action="Index">StoryBuilder</a></li>
            <li class="breadcrumb-item active">Story details</li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Description:</h5>
        @Model.Description<br />
        Amount of Paragraphs: @Model.AmountOfParagraphs
    </div>
    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
        <a asp-action="Edit" asp-route-id="@Model.Id" type="button" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" type="button" class="btn btn-danger">Delete</a>
        <a asp-action="StoryAllParagraphs" asp-route-id="@Model.Id" type="button" class="btn btn-primary">Show All Paragraphs</a>
        <a asp-action="Index" type="button" class="btn btn-success">Back to List</a>
    </div>
</div>

@if (Model.PreviousParagraphs.Count() != 0)
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Previous Paragraphs</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            <label asp-for="PreviousParagraphs.First().ParagraphType"></label>
                        </th>
                        <th>
                            <label asp-for="PreviousParagraphs.First().StageDescription"></label>
                        </th>
                        <th>
                            <label asp-for="PreviousParagraphs.First().AmountOfChoices"></label>
                        </th>
                        <th>____Action____</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PreviousParagraphs)
                    {
                        <tr>
                            <td>
                                @item.ParagraphType
                            </td>
                            <td>
                                @item.StageDescription
                            </td>
                            <td>
                                @item.AmountOfChoices
                            </td>
                            <td>
                                @*                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                                <a asp-route-name="storyBuilder" asp-action="Details" asp-route-id="@Model.Id" asp-route-paragraphId="@item.Id" type="button" class="btn btn-success">Go here!</a>
                                @*                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Current Paragraph</h5>

        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="@Model.CurrentParagraphView.ParagraphType"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.CurrentParagraphView.ParagraphType
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.CurrentParagraphView.StageDescription"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.CurrentParagraphView.StageDescription
            </dd>
            <dt class="col-sm-2">
                <label asp-for="@Model.CurrentParagraphView.AmountOfChoices"></label>
            </dt>
            <dd class="col-sm-10">
                @Model.CurrentParagraphView.AmountOfChoices
            </dd>
        </dl>
    </div>
</div>

@if (Model.NextParagraphs.Count() != 0)
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Next Paragraphs</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            <label asp-for="NextParagraphs.First().ParagraphType"></label>
                        </th>
                        <th>
                            <label asp-for="NextParagraphs.First().StageDescription"></label>
                        </th>
                        <th>
                            <label asp-for="NextParagraphs.First().AmountOfChoices"></label>
                        </th>
                        <th>____Action____</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.NextParagraphs)
                    {
                        <tr>
                            <td>
                                @item.ParagraphType
                            </td>
                            <td>
                                @item.StageDescription
                            </td>
                            <td>
                                @item.AmountOfChoices
                            </td>
                            <td>
                                @*                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                                <a asp-route-name="storyBuilder" asp-action="Details" asp-route-id="@Model.Id" asp-route-paragraphId="@item.Id" type="button" class="btn btn-success">Go here!</a>
                                @*                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                            </td>
                        </tr>
                    }
                    <tr>
                        <td>
                            Paragraph Type
                        </td>
                        <td>
                            Stage Description
                        </td>
                        <td>
                            Amount Of Choices
                        </td>
                        <td>
                            <a asp-action="CreateParagrpah" type="button" class="btn btn-success">Create new Paragraph</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
}